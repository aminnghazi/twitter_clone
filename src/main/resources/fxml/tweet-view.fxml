          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ImageView fx:id="profilePic" fitHeight="68.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../pics/lock.png" />
               </image>
            </ImageView>
         </children>
      </GridPane>
   </children>
